{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "strict": false,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env"],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "vue": [
        "node_modules/@vue/compat"
      ],
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "registry/lib/**/*",
    "webpack/**/*",
    "registry/webpack/**/*"
  ],
  "exclude": [
    "node_modules",
    "dev",
    "packages",
    "typings"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
